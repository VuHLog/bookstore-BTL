@model BookStore.Models.User

@{
    Layout = "~/Areas/Admin/Views/Shared/Admin/MainLayout.cshtml";
    ViewBag.breadcrumb = "Người dùng";
}


<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-body">
                        <div>
                            <h4>Người dùng</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">
                                    Họ
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Lastname)
                                </dd>
                                <dt class="col-sm-2">
                                    Tên
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Firstname)
                                </dd>
                                <dt class="col-sm-2">
                                    Email
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Email)
                                </dd>
                                <dt class="col-sm-2">
                                    Username
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Username)
                                </dd>
                                <dt class="col-sm-2">
                                    Password
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Password)
                                </dd>
                                <dt class="col-sm-2">
                                    Enable
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Enabled)
                                </dd>
                                <dt class="col-sm-2">
                                    Avatar
                                </dt>
                                <dd class="col-sm-10">
                                    <img style="width: 70px;" src="@(Model!=null?Model.avatarUrl:"")" class="img-fluid rounded-circle mr-3" alt="user">
                                </dd>

                            </dl>
                                <a asp-action="Index">Quay lại danh sách người dùng</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>