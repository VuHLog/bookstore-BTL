@model BookStore.Models.InvoicesOut

@{
    Layout = "~/Areas/Admin/Views/Shared/Admin/MainLayout.cshtml";
    ViewBag.breadcrumb = "Xuất hoá đơn";
}

<!-- Page Content  -->
<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Sửa xuất hoá đơn</h4>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <form asp-controller="InvoicesOut" asp-action="EditPost" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="InvoicesOutId" />
                            <div class="form-group">
                                <label asp-for="InvoicesOutId">ID hoá đơn:</label>
                                <input asp-for="InvoicesOutId" type="text" class="form-control" disabled>
                                <span asp-validation-for="InvoicesOutId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Date">Ngày xuất:</label>
                                <input asp-for="Date" type="datetime-local" class="form-control">
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CustomerId">Khách hàng:</label>
                                <select asp-for="CustomerId" class="form-control" id="exampleFormControlSelect2" asp-items="ViewBag.CustomerId">
                                    <option selected="" disabled="">Khách hàng</option>
                                </select>
                                <span asp-validation-for="CustomerId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EmployeeId">Nhân viên:</label>
                                <select asp-for="EmployeeId" class="form-control" id="exampleFormControlSelect2" asp-items="ViewBag.EmployeeId">
                                    <option selected="" disabled="">Nhân viên</option>
                                </select>
                                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Lưu</button> |
                            <a asp-action="Index">Quay lại danh sách xuất hoá đơn</a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>