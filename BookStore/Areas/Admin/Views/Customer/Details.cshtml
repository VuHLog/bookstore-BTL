@model BookStore.Models.Customer

@{
    Layout = "~/Areas/Admin/Views/Shared/Admin/MainLayout.cshtml";
    ViewBag.breadcrumb = "Khách hàng";
}


<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-body">
                        <div>
                            <h4>Khách hàng</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">
                                    ID khách hàng
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CustomerId)
                                </dd>
                                <dt class="col-sm-2">
                                    Tên khách hàng
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt class="col-sm-2">
                                    Giới tính
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Gender)
                                </dd>
                                <dt class="col-sm-2">
                                    Ngày sinh
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.DateOfBirth)
                                </dd>
                                <dt class="col-sm-2">
                                    Địa chỉ
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Address)
                                </dd>
                                <dt class="col-sm-2">
                                    UserId
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserId)
                                </dd>

                            </dl>
                            <a asp-action="Index">Quay lại danh sách khách hàng</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>