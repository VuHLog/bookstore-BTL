@model BookStore.Models.Book

@{
    Layout = "~/Views/Shared/Admin/MainLayout.cshtml";
    ViewBag.breadcrumb = "Sách";
}


<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Xoá</h4>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <h3>Bạn có chắc chắn muốn xoá không?</h3>
                        <div>
                            <h4>Sách</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">
                                    Tên
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt class="col-sm-2">
                                    Giá
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Cost)
                                </dd>
                                <dt class="col-sm-2">
                                    Ngày phát hành
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Date)
                                </dd>
                                <dt class="col-sm-2">
                                    Số lượng
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Number)
                                </dd>
                                <dt class="col-sm-2">
                                    Tác giả
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Authors)
                                </dd>
                                <dt class="col-sm-2">
                                    Loại sách
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.KindOfBook.KindOfBookId)
                                </dd>
                            </dl>

                            <form asp-action="Delete">
                                <input type="hidden" asp-for="BookId" />
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                <a asp-action="Index">Quay lại danh sách sách</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>