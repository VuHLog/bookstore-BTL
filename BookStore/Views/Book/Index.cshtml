@model IEnumerable<BookStore.Models.Book>

@{
    Layout = "~/Views/Shared/Admin/MainLayout.cshtml";
    ViewBag.breadcrumb = "Sách";
}

<div id="content-page" class="content-page">
    <div class="container-fluid" id="contentTest">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Danh sách sách</h4>
                        </div>
                        <div class="iq-card-header-toolbar d-flex align-items-center">
                            <a href="/Book/Create" class="btn btn-primary">Thêm sách</a>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <div class="table-responsive">
                            <table class="data-tables table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th style="width: 3%;">STT</th>
                                        <th style="width: 12%;">Tên</th>
                                        <th style="width: 25%">Nội dung</th>
                                        <th style="width: 12%;">Giá</th>
                                        <th style="width: 10%;">Ngày phát hành</th>
                                        <th style="width: 3%;">Số lượng</th>
                                        <th style="width: 15%;">Tác giả</th>
                                        <th style="width: 15%;">Loại sách</th>
                                        <th style="width: 10% ">Avatar</th>
                                        <th style="width: 15%;">Hoạt động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 0;
                                    }
                                    @foreach (var book in Model)
                                    {
                                        <tr>
                                            <td>@(++i)</td>
                                            <td>@book.Name</td>
                                            <td>@book.Content</td>
                                            <td>@book.Cost</td>
                                            <td>@book.Date</td>
                                            <td>@book.Number</td>
                                            <td>@book.Authors</td>
                                            <td>@book.KindOfBook.Name</td>
                                            <td>
                                                <img src="@book.imageUrl" class="img-fluid" alt="avatar image">
                                            </td>
                                            <td>
                                                <div class="flex align-items-center list-user-action">
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="/Book/Edit/@book.BookId"><i class="ri-pencil-line"></i></a>
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Xoá" href="/Book/Delete/@book.BookId"><i class="ri-delete-bin-line"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

