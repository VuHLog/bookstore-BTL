@model IEnumerable<BookStore.Models.Manager>

@{
    Layout = "~/Views/Shared/Admin/MainLayout.cshtml";
    ViewBag.breadcrumb = "Quản lý";
}

<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Danh sách quản lý</h4>
                        </div>
                        <div class="iq-card-header-toolbar d-flex align-items-center">
                            <a href="/Manager/Create" class="btn btn-primary">Thêm quản lý</a>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <div class="table-responsive">
                            <table class="data-tables table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th style="width: 3%;">STT</th>
                                        <th style="width: 12%;">Tên</th>
                                        <th style="width: 15%;">Địa chỉ</th>
                                        <th style="width: 15%;">Lương</th>
                                        <th style="width: 15%;">Kệ sách</th>
                                        <th style="width: 15%;">Hoạt động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int i = 0;}
                                    @foreach(var manager in Model)
                                    {
                                        <tr>
                                            <td>@(++i)</td>
                                            <td>@manager.Name</td>
                                            <td>@manager.Address</td>
                                            <td>@manager.Salary</td>
                                            <td>@manager.BookshelfId</td>
                                            <td>
                                                <div class="flex align-items-center list-user-action">
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="/Manager/Edit/@manager.ManagerId"><i class="ri-pencil-line"></i></a>
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Xoá" href="/Manager/Delete/@manager.ManagerId"><i class="ri-delete-bin-line"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

