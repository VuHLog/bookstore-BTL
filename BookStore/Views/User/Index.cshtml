@model IEnumerable<BookStore.Models.User>

@{
    Layout = "~/Views/Shared/Admin/MainLayout.cshtml";
    ViewBag.breadcrumb = "Người dùng";
}

<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Danh sách người dùng</h4>
                        </div>
                        <div class="iq-card-header-toolbar d-flex align-items-center">
                            <a href="/User/Create" class="btn btn-primary">Thêm người dùng</a>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <div class="table-responsive">
                            <table class="data-tables table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th style="width: 3%;">STT</th>
                                        <th style="width: 12%;">Họ</th>
                                        <th style="width: 12%;">Tên</th>
                                        <th style="width: 15%;">Email</th>
                                        <th style="width: 15%;">Tài khoản</th>
                                        <th style="width: 15%;">Mật khẩu</th>
                                        <th style="width: 5%;">Enabled</th>
                                        <th style="width: 10% ">Avatar</th>
                                        <th style="width: 10%;">Hoạt động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 0;
                                    }
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@(++i)</td>
                                            <td>@user.Lastname</td>
                                            <td>@user.Firstname</td>
                                            <td>@user.Email</td>
                                            <td>@user.Username</td>
                                            <td>@user.Password</td>
                                            <td>@user.Enabled</td>
                                            <td>
                                                <img src="@user.avatarUrl" class="img-fluid" alt="avatar image">
                                            </td>
                                            <td>
                                                <div class="flex align-items-center list-user-action">
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="/User/Edit/@user.Id"><i class="ri-pencil-line"></i></a>
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Xoá" href="/User/Delete/@user.Id"><i class="ri-delete-bin-line"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>