    <script>
        $(document).ready(function () {
            //handle search
            var inputSearchValue = $("#input-search").val();
            $("#input-search").keyup(function () {
                inputSearchValue = $(this).val();
                $(".search-result-more").attr("href", "/SearchResultList?searchString=" + inputSearchValue);
                $.ajax({
                    url: "/NavbarSearch",
                    data: { searchString: inputSearchValue },
                    dataType: 'html',
                    success: function (response) {
                        // Tạo một jQuery object từ response
                        var responseHtml = $(response);

                        // Lọc ra phần HTML
                        responseHtml = responseHtml.find("ul");
                        // Lấy nội dung HTML
                        var responseContent = responseHtml.html();
                        //console.log(responseContent)

                        $("#search-result-list").html(responseContent);
                        $(".search-results").attr("style", "display: block");

                    }
                })
            })

            var body = document.getElementsByTagName("BODY")[0];
            body.addEventListener('click', function (e) {
                $(".search-results").attr("style", "display: none");
            });

            $("#input-search").focus(function () {
                $(".search-results").attr("style", "display: block");
            })

            $(".iq-search-bar").click(function (e) {
                e.stopPropagation();
            });
        });
    </script>
