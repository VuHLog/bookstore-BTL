@using BookStore.DTO;
@using Newtonsoft.Json;
@using BookStore.Data;
@using System.Globalization;


@{
    var AccCookie = Context.Request.Cookies["account"];
    AccountDTO account = new AccountDTO();
    User user = new User();
    if (AccCookie != null)
    {
        account = JsonConvert.DeserializeObject<AccountDTO>(AccCookie);
        BookstoreContext _context = new BookstoreContext();
        user = (from u in _context.Users
                where u.Username == account.username
                select u).FirstOrDefault();
    }

    var CartCookie = Context.Request.Cookies["cart"];
    List<CartDTO> books = new List<CartDTO>();
    if (CartCookie != null)
    {
        books = JsonConvert.DeserializeObject<List<CartDTO>>(CartCookie);
    }
}



