    <script>
        $(document).ready(function () {
            var inputSearchValue = $("#input-search").val();

            $(".search-results").hide();

            $("#input-search").keyup(function () {
                inputSearchValue = $(this).val();
                console.log(inputSearchValue)
                $.ajax({
                    url: "/NavbarSearch",
                    data: { searchString: inputSearchValue },
                    dataType: 'html',
                    success: function (response) {
                        // console.log(response);
                        // Tạo một jQuery object từ response để dễ dàng tìm thẻ table
                        var responseHtml = $(response);

                        // Lọc ra phần HTML chứa thẻ table
                        responseHtml = responseHtml.find(".search-result-items");

                        // Lấy nội dung HTML trong thẻ table
                        var responseContent = responseHtml.html();

                        console.log("response: " + responseContent)
                        $(".search-results").show();
                        $("#searh-results").html(responseContent);

                    }
                })
            })
            $(".search-input").blur(function () {
                $(".search-results").hide();
            });
        });
